<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#696969" />
            <gradient android:angle="-90" android:startColor="#808080" android:endColor="#A9A9A9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#808080" />
            <solid android:color="#A9A9A9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#191919" android:endColor="#323232" />
        </shape>
    </item>
</selector>