<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.arnontproject.kkminibus.fragment.SearchDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:id="@+id/lnLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minibus_go"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:id="@+id/txtHeaderSearchDetail"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:hint="@string/search_your_mini_bus"
            android:id="@+id/edtSearchDetail"
            android:textSize="@dimen/h1"
            android:maxLines="1"
            android:gravity="center"
            android:background="@drawable/textview_style">
            <requestFocus/>
        </EditText>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lnLayout1"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listViewSearchDetail"
                android:layout_margin="10dp"/>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
